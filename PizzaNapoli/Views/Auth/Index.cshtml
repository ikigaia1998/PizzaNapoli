@model PizzaNapoli.Models.Usuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acceso al Sistema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/auth.css" />

</head>
<body class="bg-login">
    <div class="container">
        <div class="row mt-5">
            <div class="col-sm-6 offset-sm-3">
                <div class="login-form">
                    <h1>Acceso al Sistema</h1>
                    <form asp-action="Index" method="post">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input asp-for="emailusuario" class="form-control" id="email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Clave</label>
                            <input type="password" asp-for="contrasenausuario" class="form-control" id="password">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                            <button type="reset" class="btn btn-secondary">Limpiar</button>
                        </div>
                    </form>

                    <div class="register-link">
                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                            No tienes una cuenta? <a asp-action="Registrar" class="btn btn-link" style="color: #393f81;">Registrate aquí</a>
                        </p>
                    </div>
                    @ViewBag.mensaje
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
